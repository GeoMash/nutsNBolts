{
	"config":
	{
		"core":
		{
			"exception":
			{
				"details":
				[
					"POST",
					"GET",
					"RAW"
				]
			} 
		},
		"php":
		{
			
		},
		"application":
		{
			"mode": 		"production",
			"dataDir":		"./data/",
			"salt":			"Squirrels love nuts!"
		},
		"plugin":
		{
			"UserAuth":
			{
				"salt":	"Squirrels love nuts!"
			},
			"Session":
			{
				"storage": 		"file",
				"connector": 	"nutsnbolts",
				"table":		"sessions"
			},
			"Db":
			{
				"connections":
				{
					"nutsnbolts":
					{
						"handler":		"MySQL",
						"username":		"",
						"password":		"",
						"host":			"",
						"port":			"3306",
						"database":		""
					}
				}
			},
			"Logger": 
			{
				"writers": 
				{
					"rootLog": 
					{
						"class":			"DailyFileWriter",
						"output":			"/var/log/nutsNBolts/root-{DATE}.log",
						"mode":				666
					},
					"SMSLog":
					{
						"class":			"DailyFileWriter",
						"output":			"/var/log/nutsNBolts/SMS-{DATE}.log",
						"mode":				666
					}
				},
				"loggers": 
				{
					"__ROOT__": 
					{
						"writers":
						[
							{
								"writer":	"rootLog",
								"level" :	"INFO" 
							}
						]
					},
					"SMSLog":
					{
						"writers":
						[
							{
								"writer":	"SMSLog",
								"level" :	"INFO"
							}
						]
					}
				}
			},
			"Email":
			{
				"sendConfig":
				{
					"smtp": 
					{
						"mode": "smtp",
						"host": "mail.gaia.geomash.com",
						"port": 25,
						"keepAlive": true
					}
				}
			},
			"Router":
			{
				"mode":
				[
					{
						"cond": 
						{
							"interface": "cli"
						},
						"mode": "Cli"
					},
					{
						"mode": "Regex",
						"map":
						{
							"/admin/":		"admin/Index",
                            "/rest/":       "rest/Index",
							"/sandbox/":	"Sandbox",
							"/_/":			"site/ActionHandler",
							"/user/":		"User",
							".":			"Index"
						}
					}
				]
			},
			"Mvc":
			{
				"connection":		"nutsnbolts"
			},
			"Plupload":
			{
				"temporary_dir":	"/tmp/",
				"completed_dir":	"/datastore/www/<WEBSITE>/_collections/",
				"thumbnails":
                [
                    {
	                    "width":		120,
	                    "height":		120,
	                    "constraint":	"crop"
                    }
                ]
			},
			"FileSystem":
			{
				"collectionsDir": "/datastore/www/<WEBSITE>/_collections/"
			},
			"Rest":
			{
				"dir":
				{
					"controllers":	"controller/rest"
				}
			}
		}
	}
}